# Plandy AI 환경 변수 설정 예제
# 이 파일을 .env로 복사하고 실제 값으로 수정하세요

# OpenAI API 설정
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# Tavily API 설정 (웹 검색용, 선택사항)
TAVILY_API_KEY=your_tavily_api_key_here

# 데이터베이스 설정 (선택사항)
DATABASE_URL=sqlite:///plandy_ai.db
# 또는 PostgreSQL: postgresql://username:password@localhost:5432/plandy_ai
# 또는 MySQL: mysql://username:password@localhost:3306/plandy_ai

# Redis 설정 (캐시/큐용, 선택사항)
REDIS_URL=redis://localhost:6379/0

# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE=plandy_ai.log

# 시스템 설정
SYSTEM_NAME=Plandy AI
SYSTEM_VERSION=1.0.0
DEBUG_MODE=false

# 벡터 데이터베이스 설정 (Chroma, 선택사항)
CHROMA_PERSIST_DIRECTORY=./data/chroma_store

# 웹 서버 설정 (FastAPI용, 선택사항)
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# 보안 설정
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# 사용자 설정
DEFAULT_USER_ID=1
MAX_SESSION_DURATION=3600

# 에이전트 설정
SUPERVISOR_MAX_CALLS=5
DEFAULT_AGENT_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=10

# 프롬프트 설정
DEFAULT_PROMPT_TEMPLATE=default
ENABLE_PROMPT_CACHING=true
PROMPT_CACHE_SIZE=1000
